<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="Новая Задача"
    app:startDestination="@id/formFragment1">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bonita.tabsapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_formFragment2"
            app:destination="@id/formFragment1" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.bonita.tabsapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.bonita.tabsapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/formFragment1"
        android:name="com.bonita.tabsapp.ui.FormFragment"
        android:label="Новая Задача"
        tools:layout="@layout/fragment_form" />
</navigation>